<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:padding="0dp"
                                             android:layout_marginBottom="4dp" android:layout_marginTop="4dp"
                                             android:background="@drawable/recycler_background"
                                             android:onClick="channelTagClicked">
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/channelRowName" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="60dp" android:textSize="24sp" android:textColor="@android:color/black"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"
            android:textAlignment="center"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/channelRowDescription"
            app:layout_constraintTop_toBottomOf="@+id/channelRowName" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/channelRowName"
            android:textSize="18sp" android:textAlignment="center" android:textStyle="italic"
            android:textColor="@android:color/holo_red_dark"/>
    <TextView
            android:text="8:30am"
            android:layout_width="57dp"
            android:layout_height="17dp"
            android:id="@+id/channelRowTIme"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="textEnd"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/channelRowName"
            app:layout_constraintBottom_toTopOf="@+id/channelRowDate"
            app:layout_constraintVertical_bias="0.8" android:layout_marginEnd="4dp"
            app:layout_constraintStart_toEndOf="@+id/channelRowName" android:textColor="@android:color/darker_gray"
            android:textStyle="bold|italic"/>
    <TextView
            android:text="MON"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/channelRowDate"
            app:layout_constraintBottom_toBottomOf="@+id/channelRowDescription"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/channelRowDescription"
            android:layout_marginStart="24dp" app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@+id/channelRowDescription"
            android:textColor="@android:color/darker_gray" android:textStyle="bold|italic"/>
</android.support.constraint.ConstraintLayout>