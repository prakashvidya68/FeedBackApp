<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

    <TextView
            android:text="ADD CHANNEL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/addChannelHeadder"
            android:layout_marginBottom="16dp" android:layout_marginTop="26dp"
            android:textAlignment="center"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/addChannelName" android:hint="Channel Name"
            android:textColor="@color/common_google_signin_btn_text_dark_focused" android:layout_marginBottom="18dp"
            android:layout_marginRight="18dp" android:layout_marginLeft="18dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/addChannelDescription" android:hint="Channel Discription" android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp" android:layout_marginBottom="18dp"/>
</LinearLayout>